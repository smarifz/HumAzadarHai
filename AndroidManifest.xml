<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.humazadar.media"
    android:versionCode="5"
    android:versionName="1.5" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk android:minSdkVersion="8" />

    <application
        android:icon="@drawable/ic_launcher_web"
        android:label="@string/app_name" >
        <activity
            android:name=".AndroidBuildingMusicPlayerActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ExpandListActivity" />
        <activity android:name=".PlayListActivity" />
        <activity android:name=".ArtistActivity" />
        <activity android:name=".SongActivity" />

        <service
            android:name=".mediaService"
            android:enabled="true" />
    </application>

</manifest>